/dts-v1/;
#include "imx6dl.dtsi"
#include "imx6qdl-fili.dtsi"

/ {
	model = "Alere Fili i.MX6 Dual Lite Board";
	compatible = "alere,fili_dl", "fsl,imx6dl";

	memory {
		reg = <0x10000000 0x40000000>;
	};

    display@di0 {
        compatible = "fsl,imx-parallel-display";
        status = "okay";
        crtcs = <&ipu1 0>;
        interface-pix-fmt = "rgb24";
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_ipu1_1>;
        display-timings {
            native-mode = <&timing0>;
            timing0: lcd43 {
                clock-frequency = <9200000>;
                hactive = <480>;
                vactive = <272>;
                hback-porch = <2>;
                hfront-porch = <2>;
                vback-porch = <2>;
                vfront-porch = <2>;
                hsync-len = <41>;
                vsync-len = <10>;
                hsync-active = <0>;
                vsync-active = <0>;
                de-active = <1>;
                pixelclk-active = <0>;
            };
        };
    };

    leds {
        compatible = "gpio-leds";

        user@1 {
            label = "User 1";
            gpios = <&gpio7 8 1>;
            linux,default-trigger = "heartbeat";
        };

        user@2 {
            label = "User 2";
            gpios = <&gpio2 7 1>;
            linux,default-trigger = "cpu0";
        };
    };

    buttons {
        compatible = "gpio-keys";
        autorepeat;

        button@1 {
            label = "GPIO Key LEFT";
            linux,code = <105>;
            gpios = <&gpio3 8 1>;
        };

        button@2 {
            label = "GPIO Key DOWN";
            linux,code = <108>;
            gpios = <&gpio4 5 1>;
        };

        button@3 {
            label = "GPIO Key RIGHT";
            linux,code = <106>;
            gpios = <&gpio1 24 1>;
        };

        button@4 {
            label = "GPIO Key UP";
            linux,code = <103>;
            gpios = <&gpio3 12 1>;
        };

        button@5 {
            label = "GPIO Key ENTER";
            linux,code = <28>;
            gpios = <&gpio3 11 1>;
        };
    };
};
